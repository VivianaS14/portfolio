---
interface Props {
  href: string;
}

const { href } = Astro.props;

const currentPath = Astro.url.pathname;
---

<a
  href={href}
  id="nav-item"
  class=`px-8 py-2 rounded-full bg-slate-100 transition-all ease-linear duration-300 ${currentPath === href ? 'font-bold bg-slate-300' : ''}`
>
  <slot name="before" />
  <slot />
</a>
